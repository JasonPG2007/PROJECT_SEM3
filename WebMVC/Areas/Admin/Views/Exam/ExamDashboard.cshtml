@model IEnumerable<ObjectBussiness.Exam>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ExamDashboard", "Exam", FormMethod.Get))
{
    <div class="container">
        <br />
        <br />
        @if (TempData["msg"] == null)
        {
            <h1 style="text-align:center">Enter room number</h1>
        }
        else
        {
            <h1 style="color:red;text-align:center">@TempData["msg"]</h1>
        }
        <input type="text" name="id" placeholder="Room number" class="form-control" required />
        <br />
        <br />
        <br />
        <input type="submit" value="Submit" class="btn btn-danger form-control" />
    </div>
}