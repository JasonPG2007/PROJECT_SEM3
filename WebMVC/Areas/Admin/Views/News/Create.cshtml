@model ObjectBussiness.NewsImage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<br />

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-block alert-danger fade in" })
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"> Title Post</label>
                @Html.EditorFor(model=>model.Title,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter title"} })

                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Contents" class="control-label"> Content </label>
                @Html.TextAreaFor(model => model.Contents, new {@class = "form-control", id= "summernote"})
                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ShortContents" class="control-label"> Short Contents</label>
                @Html.EditorFor(model=>model.ShortContents,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter short contents"} })
                <span asp-validation-for="ShortContents" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"> Date Publish</label>
                @Html.EditorFor(model=>model.ImageFile,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter Date Publish"} })
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateSubmitted" class="control-label"> Date Publish</label>
                @Html.EditorFor(model=>model.DateSubmitted,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter Date Publish"} })
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"> Category News</label>
                @Html.EditorFor(model=>model.CategoryID,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter category news"} })
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"> AccountID</label>
                @Html.EditorFor(model=>model.AccountID,new {htmlAttributes= new{@class="form-control", @placeholder="Pleate enter AccountID"} })
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Creat" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<br />

<div>
    @Html.ActionLink("Back To List","Index","News",null, new {@class="btn btn-danger"})
</div>


<!--Kích hoạt phần tử #Content là Editor HTML -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Enter News content',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>

