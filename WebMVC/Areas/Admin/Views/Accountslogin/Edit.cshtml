@model ObjectBussiness.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/log/login.cshtml";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountID" />
            <div class="form-group">
                <label asp-for="ExamID" class="control-label"></label>
                <select asp-for="ExamID" class="form-control" asp-items="ViewBag.ExamID"></select>
                <span asp-validation-for="ExamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamRegisterID" class="control-label"></label>
                <select asp-for="ExamRegisterID" class="form-control" asp-items="ViewBag.ExamRegisterID"></select>
                <span asp-validation-for="ExamRegisterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HashedPassword" class="control-label"></label>
                <input asp-for="HashedPassword" class="form-control" />
                <span asp-validation-for="HashedPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
