            </div>
            <br />
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                @Html.EditorFor(model=>model.Contents,new {htmlAttributes= new{@class="form-control"} })
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ShortContents" class="control-label"></label>
                @Html.EditorFor(model=>model.ShortContents,new {htmlAttributes= new{@class="form-control"} })
                <span asp-validation-for="ShortContents" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                @Html.EditorFor(model=>model.Picture,new {htmlAttributes= new{@class="form-control"} })
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateSubmitted" class="control-label"></label>
                @Html.EditorFor(model=>model.DateSubmitted,new {htmlAttributes= new{@class="form-control"} })
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                @Html.EditorFor(model=>model.CategoryID,new {htmlAttributes= new{@class="form-control"} })
